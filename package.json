{
  "name": "commitional",
  "version": "1.0.0",
  "description": "CLI tool for crafting commit messages - compatible with commitlint",
  "main": "bin/commitional.js",
  "bin": {
    "commitional": "./bin/commitional.js"
  },
  "files": [
    "bin"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preversion": "npm check && npm run lint && npm test",
    "postversion": "git push origin --follow-tags",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "dev": "node esbuild.config.mjs",
    "test": "npm run build && mocha",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "tsc -noEmit -skipLibCheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wannabewayno/commitional.git"
  },
  "keywords": [
    "commit",
    "git",
    "cli",
    "lint",
    "commitlint",
    "commitizen"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run format --",
      "npm run lint --"
    ]
  },
  "author": {
    "name": "Wayne Griffiths",
    "email": "wayne.c.griffiths@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wannabewayno/commitional/issues"
  },
  "homepage": "https://github.com/wannabewayno/commitional#readme",
  "dependencies": {
    "@commitlint/load": "^19.8.1",
    "@inquirer/prompts": "~7.5.2",
    "arktype": "^2.1.20",
    "axios": "^1.9.0",
    "commander": "^11.1.0",
    "inquirer-select-with-banner": "^1.0.0",
    "ora": "^8.2.0",
    "simple-git": "~3.27.0",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "~1.9.4",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "~10.0.10",
    "@types/node": "~22.15.21",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "esbuild": "~0.25.4",
    "husky": "~9.1.7",
    "lint-staged": "^16.0.0",
    "mocha": "~11.5.0",
    "sinon": "^20.0.0",
    "tsx": "~4.19.4",
    "typescript": "~5.8.3"
  }
}
