{
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**",
    "**/__mocks__/**",
    "**/interfaces/**",
    "dist/**"
  ],
  "extension": [".ts", ".tsx"],
  "reporter": ["text", "html", "lcov"],
  "report-dir": "coverage",
  "temp-directory": ".tmp/coverage",
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  }
}